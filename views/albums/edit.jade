extends ../layout

block content
    div.container
        form(name='new-album' method='POST' action='/albums/#{album._id}?_method=Put')
            p.form-group
                label(for='genre') Genre 
                input.form-control(type='text' name='genre' value='#{album.genre}')
            p
                label(for='artist') Artist
                input.form-control(type='text' name='artist' value='#{album.artist}')
            p
                label(for='name') Name
                input.form-control(type='text' name='name' value='#{album.name}')
            p
                input.btn.btn-success(type='submit' value='Update this album')

            form(name='delete-album' method='POST' action='/albums/#{album._id}?_method=DELETE')
            input.btn.btn-warning(type='submit' value='Delete #{album.name}', )